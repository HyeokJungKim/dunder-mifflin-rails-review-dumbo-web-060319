<h1>Employee Show</h1>

<%# image_tag @employee.img_url %>
<img src="<%= @employee.img_url %>" alt="<%= @employee.first_name %>">

<p>
  Name: <%= @employee.full_name %>
</p>
<p>
  Title: <%= @employee.title %>
</p>
<p>
  Alias: <%= @employee.alias %>
</p>
<p>
  Office: <%= @employee.office %>
</p>
